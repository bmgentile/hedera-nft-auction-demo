{
  "manifest_version": 2,
  "name": "Hedera Demo Extension",
  "homepage_url": "http://hedera.com/",
  "description": "A Vue Browser Extension",
  "default_locale": "en",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["js/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "js/inject.js"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Hedera Demo Extension",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
